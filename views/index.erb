<h2>Sinatra-PG-Heroku</h2>
<form action="/post" method="post">
    <input type="text" name="title" placeholder="title">
    <input type="text" name="content" placeholder="content">
    <input type="submit">
</form>
<table>
    <tr>
        <th>Title</th>
        <th>Content</th>
    </tr>
    <% @posts.each do |post| %>
    <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
    </tr>
    <% end %>
</table>